{{> header}}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="{{product.image}}" alt="{{product.title}}" />
                    </div>
                    {{# if product.image2}}
                    <div class="carousel-item">
                        <img class="d-block w-100" src="{{product.image2}}" alt="{{product.title}}" />
                    </div>
                    {{/if}}
                    {{# if product.image3}}
                    <div class="carousel-item">
                        <img class="d-block w-100" src="{{product.image3}}" alt="{{product.title}}" />
                    </div>
                    {{/if}}
                </div>
                {{# if product.image2}}
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
                {{/if}}
            </div>
        </div>
        <div class="col-md-6">
            <div class="container right-side">
                <div class="row text-center">
                    <div class="col-md-12 product-title">
                        <span>{{product.title}}</span>
                    </div>
                </div>
                {{#if (iszero product.stock)}}
                <div class="row text-center">
                    <div class="col-md-12">
                        <span class="out-of-stock-text">Out Of Stock</span>
                    </div>
                </div>
                {{/if}}
                <div class="row text-center">
                    <div class="col-md-12 product-description-title">
                        <strong>Description:</strong>
                    </div>
                    <div class="col-md-12 product-description">
                        <span>{{product.description}}</span>
                    </div>
                </div>
                <div class="row text-center">
                    <div class="col-md-12 price">
                        {{#if (notzero product.stock)}}
                        <span class="price-text">Price: </span><span>£{{product.price}}</span>
                        {{else}}
                        <span class="price-text out-of-stock-price">Price: £{{product.price}}</span>
                        {{/if}}
                    </div>
                </div>
                <div class="row text-center">
                    {{#if (notzero product.stock)}}
                    <a href="/shop/add/{{ product.id }}" class="btn btn-primary card-text product-buy">Buy Now</a>
                    {{else}}
                    <button class="btn btn-danger card-text product-buy">Out Of Stock</a>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>