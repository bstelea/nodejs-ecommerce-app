{{> header}}

<div class="container shop-container">
    <div class="row">
        <div class="col-md-3">
            <div class="container">
                <div class="row">
                    <div class="col-md-12"><h3>Filters</h3></div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-center filter-content">
                        <form action="/shop" method="GET">
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label for="category">Category</label>
                                    <select id="category" name="category" class="form-control">
                                        <option selected="selected" value="All">All</option>
                                        <option value="Country Blend">Country Blend</option>
                                        <option value="Flavour Blend">Flavour Blend</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label for="startPrice">Price Range</label>
                                </div>
                                <div class="form-group col-md-4">
                                    <input type="number" min="0" max="99" class="form-control" id="startPrice" name="startPrice" value="0" />
                                </div>
                                <div class="col-md-4 text-center">
                                    <span>to</span>
                                </div>
                                <div class="form-group col-md-4">
                                    <input type="number" min="1" max="100" class="form-control" id="endPrice" name="endPrice" value="100" />
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary">Apply</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="container">
                <div class="row sort">
                    <div class="col-md-4"></div>
                    <div class="col-md-8">
                        <form action="/shop" method="GET">
                            <div class="form-group col-md-12" style="display:flex; flex-direction: row; justify-content: center; align-items: center">
                                    <label for="sort" class="col-md-5">SORT ORDER</label>
                                    <select id="sort" name="sort" class="form-control col-md-5">
                                        <option selected="selected" value="">Featured</option>
                                        <option value="latest">Latest Release</option>
                                        <option value="price-asc">Price - Low to High</option>
                                        <option value="price-desc">Price - High to Low</option>
                                        <option value="name-asc">Name ascending (A-Z)</option>
                                        <option value="name-desc">Name descending (Z-A)</option>
                                    </select>
                                    <button type="submit">SORT</button>
                            </div>
                            
                        </form>
                    </div>
                </div>
                <div class="row">
                    {{# each products }}
                    <div class="col-md-4">
                        <div class="card product-card text-center">
                            <a href="/product?id={{this.id}}"><img class="card-img-top" src="{{ this.image }}" alt="Card image cap" /></a>
                            <div class="card-body">
                                <h5 class="card-title">{{ this.title }}</h5>
                                {{#if (notzero this.stock)}}
                                <p class="card-text">Price: £{{ this.price }}</p>
                                <a href="/shop/add/{{ this.id }}" class="btn btn-primary card-text">Buy Now</a>
                                {{else}}
                                <p class="card-text out-of-stock-price">Price: £{{ this.price }}</p>
                                <button class="btn btn-danger card-text" disabled="disabled">Out Of Stock</button>
                                {{/if}}
                                <p class="card-text product-link"><a href="/product?id={{this.id}}">View More</a></p>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>